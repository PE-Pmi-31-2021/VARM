<Page x:Class="VARM_games_TEST.Views.RecordsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VARM_games_TEST.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RecordsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid AutoGenerateColumns="False" x:Name="recordsGrid" SelectionChanged="recordsGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Player.name}" Header="Player" Width="110"/>
                <DataGridTextColumn Binding="{Binding Games.title}" Header="Game" Width="110"/>
                <DataGridTextColumn Binding="{Binding Records.record}" Header="Record" Width="110"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
